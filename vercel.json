{
  "version": 2,
  "functions": {
    "api/ws.js": { "runtime": "edge" },
    "api/*.js": { "runtime": "edge" }
  },
  "routes": [
    { "src": "/api/ws", "dest": "api/ws.js" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/room/(.*)", "dest": "/public/room.html" },
    { "src": "/", "dest": "/public/index.html" }
  ]
}


